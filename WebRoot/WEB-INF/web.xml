<?xml version="1.0" encoding="UTF-8"?>

<web-app>
    <welcome-file-list>
    	<welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
		<servlet-name>获取有关博客管理的数据</servlet-name>
		<servlet-class>com.xck.blog.servlet.AdminIndexServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>获取有关博客管理的数据</servlet-name>
		<url-pattern>/adminIndex_sidebar</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>提交博文</servlet-name>
		<servlet-class>com.xck.blog.servlet.EditArticleServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>提交博文</servlet-name>
		<url-pattern>/postArticle</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>博文列表操作</servlet-name>
		<servlet-class>com.xck.blog.servlet.HandleArticleListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>博文列表操作</servlet-name>
		<url-pattern>/EDGArticleList</url-pattern>
	</servlet-mapping>
</web-app>